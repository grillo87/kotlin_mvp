<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_background">


    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/dialogProgressWheel"
        android:layout_width="@dimen/dialog_loading_loading_size"
        android:layout_height="@dimen/dialog_loading_loading_size"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dialog_loading_loading_upper_margins"
        android:layout_marginEnd="@dimen/dialog_loading_loading_lateral_margins"
        android:layout_marginLeft="@dimen/dialog_loading_loading_lateral_margins"
        android:layout_marginRight="@dimen/dialog_loading_loading_lateral_margins"
        android:layout_marginStart="@dimen/dialog_loading_loading_lateral_margins"
        android:layout_marginTop="@dimen/dialog_loading_loading_upper_margins"
        wheel:layout_constraintBottom_toBottomOf="parent"
        wheel:layout_constraintStart_toStartOf="parent"
        wheel:layout_constraintTop_toTopOf="parent"
        wheel:matProg_barColor="@color/colorAccent"
        wheel:matProg_progressIndeterminate="true" />


    <TextView
        android:id="@+id/dialogLoadingBody"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dialog_loading_body_height"
        android:layout_marginBottom="@dimen/dialog_loading_body_upper_margins"
        android:layout_marginEnd="@dimen/dialog_loading_body_lateral_margins"
        android:layout_marginLeft="@dimen/dialog_loading_body_lateral_margins"
        android:layout_marginRight="@dimen/dialog_loading_body_lateral_margins"
        android:layout_marginStart="@dimen/dialog_loading_body_lateral_margins"
        android:layout_marginTop="@dimen/dialog_loading_body_upper_margins"
        android:gravity="left|center"
        android:textColor="@color/white"
        android:textSize="@dimen/dialog_loading_body_text_size"
        wheel:layout_constraintBottom_toBottomOf="parent"
        wheel:layout_constraintEnd_toEndOf="parent"
        wheel:layout_constraintStart_toEndOf="@+id/dialogProgressWheel"
        wheel:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

